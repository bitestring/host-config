# nextcloud-proxy.container
[Unit]
Description=nextcloud
Requires=nextcloud.service
After=nextcloud.service

[Container]
Image=docker.io/nginx:latest
AutoUpdate=registry
Pod=nextcloud.pod
Volume=./nginx/nginx.conf:/etc/nginx/nginx.conf:z
Volume=./nginx/cert.pem:/etc/nginx/cert.pem:z
Volume=./nginx/cert.key:/etc/nginx/cert.key:z

[Service]
Restart=always

